<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:id="@+id/select_project_frame">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="316dp"
            android:layout_gravity="center"
            android:id="@+id/selectable_projects_list"
            />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Selecionar Projeto"
            android:id="@+id/textView2"
            android:layout_gravity="top|center_vertical"
            android:layout_margin="15dp" />


    </FrameLayout>

    <com.museupessoa.maf.assistenteentrevistas.tabs.SlidingTabLayout
        android:id="@+id/new_interview_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:background="@color/colorAccent" />

    <android.support.v4.view.ViewPager
        android:id="@+id/new_interview_pager"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />

</LinearLayout>